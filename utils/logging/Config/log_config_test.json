{
  "backend": "standard",
  "level": "DEBUG",
  "log_directory": "./logs",
  "redaction": {
    "enabled": false
  },
  "formatters": {
    "default": {
      "format": "[TEST] %(asctime)s - %(name)s - %(levelname)s - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    },
    "detailed": {
      "format": "[TEST] %(asctime)s - %(name)s - %(levelname)s - %(module)s:%(funcName)s:%(lineno)d - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  "handlers": {
    "console": {
      "type": "console",
      "level": "DEBUG",
      "formatter": "detailed"
    },
    "file": {
      "type": "file",
      "level": "DEBUG",
      "formatter": "detailed",
      "filename": "test_application.log"
    }
  },
  "delayed_logging": {
    "enabled": false,
    "queue_size_kb": 0,
    "flush_on_exception": false,
    "flush_on_completion": false
  },
  "duration_logging": {
    "slow_threshold_seconds": 0.1,
    "warn_threshold_seconds": 0.5,
    "error_threshold_seconds": 2.0
  },
  "workflow_logging": {
    "enabled": true,
    "log_user_messages": true,
    "log_agent_responses": true,
    "log_usage_metrics": true,
    "log_condition_evaluations": true,
    "log_pass_through_extractions": true,
    "truncate_messages_at": 500,
    "include_trace_id": true,
    "async_logging": false,
    "messages": {
      "tokens": "Consumed Input tokens {input_tokens}, Output tokens {output_tokens}, Total {total_tokens}",
      "duration": "{component} '{name}' completed in {duration_ms:.2f}ms",
      "cost": "Cost: ${cost_usd:.6f}",
      "error": "{component} '{name}' failed: {error}"
    }
  },
  "notes": "Test environment configuration for comprehensive testing. Features: delayed logging disabled for immediate feedback, sensitive duration thresholds to catch performance issues early, detailed logging for debugging, redaction disabled to see full data during testing"
} 