{
  "backend": "json",
  "level": "DEBUG",
  "log_directory": "./logs",
  "redaction": {
    "enabled": false,
    "placeholder": "[DEV_REDACTED]",
    "patterns": [
      {
        "pattern": "\\b\\d{4}[-\\s]?\\d{4}[-\\s]?\\d{4}[-\\s]?\\d{4}\\b",
        "placeholder": "[CREDIT_CARD_REDACTED]"
      }
    ]
  },
  "formatters": {
    "default": {
      "format": "{\"timestamp\": \"%(asctime)s\", \"level\": \"%(levelname)s\", \"logger\": \"%(name)s\", \"message\": %(message)s}",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  "handlers": {
    "console": {
      "type": "console",
      "level": "DEBUG"
    },
    "file": {
      "type": "file",
      "level": "DEBUG",
      "filename": "dev_application.log"
    }
  },
  "delayed_logging": {
    "enabled": true,
    "queue_size_kb": 10,
    "flush_on_exception": true,
    "flush_on_completion": true
  },
  "duration_logging": {
    "slow_threshold_seconds": 0.5,
    "warn_threshold_seconds": 2.0,
    "error_threshold_seconds": 10.0
  },
  "workflow_logging": {
    "enabled": true,
    "log_user_messages": true,
    "log_agent_responses": true,
    "log_usage_metrics": true,
    "log_condition_evaluations": true,
    "log_pass_through_extractions": true,
    "truncate_messages_at": 500,
    "include_trace_id": true,
    "async_logging": true,
    "messages": {
      "tokens": "Consumed Input tokens {input_tokens}, Output tokens {output_tokens}, Total {total_tokens}",
      "duration": "{component} '{name}' completed in {duration_ms:.2f}ms",
      "cost": "Cost: ${cost_usd:.6f}",
      "error": "{component} '{name}' failed: {error}"
    }
  },
  "notes": "Development environment configuration optimized for developer experience. Features: delayed logging enabled for performance testing, moderate duration thresholds, basic redaction for sensitive data protection, JSON backend for structured development logging, workflow logging enabled with full metrics"
}